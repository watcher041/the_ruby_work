= render "templates/form_header"
.main__container
  .main__container__head
    .no_account-wrap
      %p アカウントをお持ちでない方はこちら
      = link_to "新規会員登録", new_user_registration_path, class: "btn-new_user"       
  .main__container__form
    .content-wrap
      .content-wrap-omuniauth
        = link_to user_facebook_omniauth_authorize_path, method: :post, class: "btn btn__facebook" do
          %i.fab.fa-facebook-square.fa-2x
          Facebookでログイン
        = link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: "btn btn__google" do
          Googleでログイン
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          = f.email_field :email, autofocus: true, autocomplete: "email", class: 'input-default', placeholder: 'メールアドレス'
          = f.password_field :password, autocomplete: "current-password", class: 'input-default', placeholder: 'パスワード'
        .actions
          = f.submit "ログイン", class:'btn'
      = render "devise/shared/links"
= render "templates/form_footer"