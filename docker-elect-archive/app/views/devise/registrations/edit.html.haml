
.container
  %h1= t('.title', resource: resource_name.to_s.humanize)
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = bootstrap_devise_error_messages!
    .form-top
      .form-top-list
        .form-group
          = f.label :name, class: "form-label"
          = f.text_field :name, placeholder: "name", class: "form-control"
        .form-group
          = f.label :email
          = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control'
      .form-top-image
        = f.label :image, class:"form-label" do
          = f.file_field :image, class: "image-file"
          = image_tag 'default.jpg' ,class: "file-image" 
    .form-group
      = f.label :text, class: "form-label"
      = f.text_area :text, placeholder: "text（自己紹介）" , rows: 5, class: "form-control"
    .form-group
      = f.label :password
      = f.password_field :password, autocomplete: 'new-password', class: 'form-control'
      %small.form-text.text-muted= t('.leave_blank_if_you_don_t_want_to_change_it')
    .form-group
      = f.label :password_confirmation
      = f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control'
    .form-group
      = f.label :current_password
      = f.password_field :current_password, autocomplete: 'current-password', class: 'form-control'
      %small.form-text.text-muted= t('.we_need_your_current_password_to_confirm_your_changes')
    .form-group#account_button
      = f.submit t('.update'), class: 'btn btn-primary'
      %p #{link_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, class: 'btn btn-danger',method: :delete}.
