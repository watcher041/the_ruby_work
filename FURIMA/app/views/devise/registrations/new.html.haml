
= render "templates/form_header"
.form
  %h2 新規登録フォーム
  = render "devise/shared/error_messages", resource: resource
  = form_for(@user, url: user_registration_path) do |f|
    .field
      = f.label :nickname
      %span.require 必須
      %br/
      = f.text_field :nickname, autofocus: true, autocomplete: "nickname", required: true, placeholder: "例）フリマ太郎"
    .field
      = f.label :email
      %span.require 必須
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", required: true, placeholder: "例）furima@furima.com"
    .field
      = f.label :password
      (#{@minimum_password_length} 文字以上入力してください)
      %span.require 必須
      %br/
      = f.password_field :password, autocomplete: "new-password", required: true, placeholder: "7文字以上の半角英数字"
    .field
      = f.label :password_confirmation
      %span.require 必須
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", required: true, placeholder: "パスワードを再度入力してください"
    = f.label "お名前（全角）"
    %span.require 必須
    .form-field
      .field      
        = f.text_field :first_name, autofocus: true, autocomplete: "first_name", required: true, placeholder: "例）田中"
      .field
        = f.text_field :last_name, autofocus: true, autocomplete: "last_name", required: true, placeholder: "例）一郎"
    = f.label "お名前（かな）"
    %span.require 必須
    .form-field
      .field
        = f.text_field :first_kana, autofocus: true, autocomplete: "first_kana", required: true, placeholder: "例）たなか"
      .field
        = f.text_field :last_kana, autofocus: true, autocomplete: "last_kana", required: true, placeholder: "例）いちろう"
    .field
      = f.label :birthday
      %span.require 必須
      %br/
      = raw sprintf(f.date_select(:birthday,{prompt:"--",
                                            use_month_numbers:true, 
                                            start_year:Time.now.year, 
                                            end_year:1900, 
                                            date_separator:'%s'}, {required: true}),'年','月')+'日'
    .field
      = f.label :phone_number
      %span.any 任意
      %br/
      = f.text_field :phone_number, autofocus: true, autocomplete: "phone_number"
    
    .actions
      = f.submit "次へ進む"
= render "templates/form_footer"